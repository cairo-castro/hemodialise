# ==============================================
# HEMODIALISE - DOCKER ENVIRONMENT TEMPLATE
# ⚠️  IMPORTANTE: Este arquivo é apenas um TEMPLATE
#
# CONFIGURE AS VARIÁVEIS REAIS NO DOKPLOY:
# 1. Acesse: http://212.85.1.175:3000
# 2. Vá em Projects > qualidade > Environment Variables
# 3. Configure todas as variáveis listadas abaixo
#
# Veja: DOKPLOY-ENV-GUIDE.md para instruções completas
# ==============================================

# Application
APP_NAME="Sistema Hemodiálise - Qualidade"
APP_ENV=production
APP_KEY=CONFIGURE_NO_DOKPLOY_GERAR_COM_php_artisan_key_generate
APP_DEBUG=false
APP_URL=https://qualidadehd.direcaoclinica.com.br
APP_TIMEZONE=America/Sao_Paulo

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Banco PRODUÇÃO - MariaDB Dokploy
# ⚠️  CONFIGURE ESTAS VARIÁVEIS NO DOKPLOY (Project Level)
DB_CONNECTION=mariadb
DB_HOST=${{project.DB_HOST}}
DB_PORT=${{project.DB_PORT}}
DB_DATABASE=hemodialise_gqa
DB_USERNAME=${{project.DB_USERNAME}}
DB_PASSWORD=${{project.DB_PASSWORD}}
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=480
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.direcaoclinica.com.br
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=hemodialise_cache

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@direcaoclinica.com.br"
MAIL_FROM_NAME="${APP_NAME}"

# JWT Authentication
JWT_SECRET=NHJVkr3HSHQM1D7BxhToHm5rB4EffTsCvHpyhjljiygtoIqFZAySrokYTpnHlNxX
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256
JWT_BLACKLIST_ENABLED=true

# AWS S3 (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"

# Container Initialization Flags
RUN_MIGRATIONS=true
RUN_SEEDERS=false

# Trusted Proxies (Dokploy/Traefik)
TRUSTED_PROXIES=*
ASSET_URL=https://qualidadehd.direcaoclinica.com.br

# Security
SANCTUM_STATEFUL_DOMAINS=qualidadehd.direcaoclinica.com.br
